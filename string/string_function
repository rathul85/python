#casefold
text = "der Fluß" # german word

print(text.lower())     # output: der fluß (অক্ষরটি বদলায়নি)
print(text.casefold())  # output: der fluss (here 'ß' is converted by 'ss')
#"It converts all characters to lowercase just like lower(), but it is much more powerful (e.g., it can lowercase special characters in German or other languages). It is often used in large-scale ML (Machine Learning) projects."
# using casefold for text matching
str_one = "BANGLADESH"
str_two = "bangladesh"

if str_one.casefold() == str_two.casefold():
    print("The strings are the same!")

if str_one == str_two:
    print("same")
else:
    print("False, they are not same!")

text = "  python for Machine Learning  "

# step for data cleaning
clean_text = text.strip().lower().replace("machine", "deep")
words = clean_text.split()

print(clean_text) # output: "python for deep learning"
print(words)      # output: ['python', 'for', 'deep', 'learning']


text = "Python Pro"
print(text.swapcase()) # output: pYTHON pRO
text1 = "Rathul"
print(text1[0:6:2])
# output: Rtu #[start:end:step]

print(text[::-1])
# output: luhtaR (step=-1,here whole string will be reversed)
#1. "To take every second character: str[::2] (specifying start and end is optional)." 2. "To reverse a string: This is very frequently asked in interviews."

name = "Rathul"
age = 25
# f-string (Best practice)
print(f"My name is {name} and I am {age} years old.")
# output: My name is Rathul and I am 25 years old.
#startswith
py = "Python is fun"
