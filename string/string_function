#join
words = ["Python", "is", "awesome"]
# "Using space ' ' as a delimiter here."
sentence = " ".join(words)
print(sentence)
# output: Python is awesome
data = ["Py", "thon"]
print("-".join(data))  # output: Py-thon
print("".join(data))   # output: Python
list_of_strings = ["Rathul", "learning", "Python"]
# "Joined with a comma (,)"
result = ", ".join(list_of_strings)
print(result)
# output: Rathul, learning, Python
