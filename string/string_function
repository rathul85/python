#partition
email = "rathul@example.com"
print(email.partition("@")) # output: ('rathul', '@', 'example.com')
#partition
email = "rathul@example.com"
print(email.partition("@")) # output: ('rathul', '@', 'example.com')
#center,ljust,rjust
text = "Python"
print(text.center(20, "-")) # output: -------Python-------
text = "Python"
print(text.rjust(20, "-"))
# Output: --------------Python
text = "Python"
print(text.ljust(20, "-"))
# Output: Python--------------
